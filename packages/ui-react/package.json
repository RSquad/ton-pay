{
  "name": "@ton-pay/ui-react",
  "version": "0.2.0",
  "description": "React components and hooks for TON Pay SDK",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:button-react": "cd test && bun install && bun run dev",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "injectStyle": true,
    "platform": "browser",
    "skipNodeModulesBundle": true,
    "external": [
      "react",
      "react-dom",
      "@tonconnect/ui-react",
      "@tonconnect/ui",
      "@tonconnect/sdk",
      "@tonconnect/isomorphic-eventsource",
      "@tonconnect/isomorphic-fetch",
      "@tonconnect/protocol",
      "@ton-pay/api"
    ]
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "@tonconnect/ui-react": "^2.2.0",
    "@ton-pay/api": ">=0.1.0"
  },
  "devDependencies": {
    "@tonconnect/sdk": "^3.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react-dom": "18.3.1"
  },
  "keywords": [
    "ton",
    "tonpay",
    "ton-pay",
    "toncoin",
    "react",
    "blockchain",
    "payments",
    "crypto",
    "ui",
    "components",
    "hooks",
    "wallet",
    "tonconnect"
  ],
  "author": "RSquad Blockchain Lab",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/RSquad/ton-pay.git",
    "directory": "packages/ui-react"
  },
  "homepage": "https://docs.tonpay.tech",
  "bugs": {
    "url": "https://github.com/RSquad/ton-pay/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
